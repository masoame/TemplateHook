{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "c/c++",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                //"-g",
                "-std=c++23",
                //"-shared",
                //"-w",
                //"-O3",
                "${fileDirname}\\*.cpp",
                "-o",
                "${fileDirname}\\..\\g++build\\DebugHook.exe",
                //"${fileDirname}\\..\\g++build\\DllHook.dll"
            ],
            "options": {
                "cwd": "${fileDirname}\\..\\g++build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "O3_Release"
        }

    ],
    "version": "2.0.0"
}