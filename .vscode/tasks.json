{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++20",
                "${fileDirname}\\*.cpp",
                "-o",
                "${fileDirname}\\..\\g++build\\DebugHook.exe"
            ],
            "options": {
                "cwd": "${fileDirname}\\..\\g++build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}